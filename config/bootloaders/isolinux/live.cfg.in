label localhdd-boot
	menu label Boot from first ^HDD
	menu default
	localboot 0

label live-@FLAVOUR@
	menu label ^Try or Install Tanglu (@FLAVOUR@)
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@

label live-@FLAVOUR@-failsafe
	menu label Tanglu Live (@FLAVOUR@ ^failsafe)
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE_FAILSAFE@
